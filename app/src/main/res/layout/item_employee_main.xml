<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:id="@+id/clickArea"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@drawable/selector_function_item_back"
    app:cardCornerRadius="10dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="38dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/unUseTip"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:textColor="@android:color/white"
            android:background="@drawable/shape_un_use_tip_back"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/unUseTip"/>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/singleLogoSize"
            android:layout_height="@dimen/singleLogoSize"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/selector_function_item_logo"/>

        <TextView
            android:id="@+id/functionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:textColor="@drawable/selector_function_item_text"
            android:textSize="17sp"/>


    </LinearLayout>

</android.support.v7.widget.CardView>